<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">


    <TextView
        android:id="@+id/example"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:background="@drawable/text_bg"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="b + a = c"
        android:textColor="@color/blue_light"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/example"
        app:layout_constraintStart_toStartOf="@+id/example"
        app:layout_constraintTop_toBottomOf="@+id/example">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/heart" />

    </LinearLayout>

    <Button
        android:id="@+id/menu"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:stateListAnimator="@animator/button_state_animator"
        android:text="HOME"
        android:textColor="@color/blue_light"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/example"
        app:layout_constraintStart_toStartOf="@+id/example"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/countdown"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_bg"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="5s"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/example"
        app:layout_constraintEnd_toStartOf="@+id/level"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_bg"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="Lv.1"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/example"
        app:layout_constraintEnd_toEndOf="@+id/example"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/answer_a"
        style="@style/button_tm"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:stateListAnimator="@animator/button_state_animator"
        android:text="a"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/answer_b"
        style="@style/button_tm"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:stateListAnimator="@animator/button_state_animator"
        android:text="b"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/answer_c"
        style="@style/button_tm"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:stateListAnimator="@animator/button_state_animator"
        android:text="c"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/answer_d"
        style="@style/button_tm"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:stateListAnimator="@animator/button_state_animator"
        android:text="d"
        android:textColor="@color/blue_light"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>